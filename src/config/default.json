{
  "application": {
    "name": "SOS Assessment Automation Tool",
    "version": "1.0.0",
    "environment": "development",
    "trustLevel": 80,
    "sessionPrefix": "sess-"
  },
  "v42_compliance": {
    "atomicOperations": true,
    "binaryProof": true,
    "manualPasteTracking": true,
    "sessionTraces": true,
    "trustEnforcement": true,
    "manualPasteLimit": 5,
    "orphanThreshold": 3,
    "rageThreshold": 5
  },
  "ingestion": {
    "enabled": true,
    "supportedFormats": ["pdf", "csv", "xlsx", "json", "txt"],
    "maxFileSize": 104857600,
    "watchFolders": ["./input", "./hot-folder"],
    "validationStrict": true,
    "minTrustLevel": 25
  },
  "processing": {
    "enabled": true,
    "parallelJobs": 4,
    "timeout": 300000,
    "retryAttempts": 3,
    "minTrustLevel": 50,
    "patterns": {
      "library": "./patterns/library.json",
      "customPatterns": "./patterns/custom.json"
    },
    "rules": {
      "definitions": "./rules/definitions.json",
      "customRules": "./rules/custom.json"
    }
  },
  "export": {
    "enabled": true,
    "formats": ["json", "csv", "pdf", "html", "xml", "txt"],
    "outputFolder": "./output",
    "templateFolder": "./templates",
    "minTrustLevel": 25
  },
  "ui": {
    "enabled": true,
    "port": 3000,
    "host": "localhost",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000"]
    },
    "websocket": {
      "enabled": true,
      "pingInterval": 30000
    },
    "minTrustLevel": 50
  },
  "api": {
    "enabled": true,
    "version": "v1",
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "authentication": {
      "enabled": false,
      "type": "bearer"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "destination": "./logs",
    "rotateDaily": true,
    "maxFiles": 30
  },
  "database": {
    "type": "sqlite",
    "path": "./data/sos_assessment.db",
    "options": {
      "logging": false,
      "synchronize": true
    }
  },
  "cache": {
    "enabled": true,
    "type": "memory",
    "ttl": 3600,
    "maxSize": 100
  },
  "integrations": {
    "highergov": {
      "enabled": false,
      "apiUrl": "https://api.highergov.com",
      "apiKey": "${HIGHERGOV_API_KEY}",
      "rateLimit": 100,
      "timeout": 30000
    },
    "samgov": {
      "enabled": false,
      "baseUrl": "https://sam.gov",
      "scraping": {
        "enabled": false,
        "interval": 3600000
      }
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 60000
    },
    "health": {
      "enabled": true,
      "endpoint": "/health"
    },
    "traces": {
      "required": [
        "Creation",
        "Data Attach",
        "Processing",
        "Complete",
        "UI Render",
        "Export Ready"
      ]
    }
  },
  "security": {
    "inputValidation": true,
    "sanitization": true,
    "encryption": {
      "enabled": false,
      "algorithm": "aes-256-gcm"
    },
    "secrets": {
      "source": "environment"
    }
  },
  "performance": {
    "maxConcurrentSessions": 10,
    "queueDepth": 1000,
    "workerThreads": 4,
    "memoryLimit": 2147483648
  },
  "development": {
    "debug": true,
    "hotReload": true,
    "mockData": true,
    "testMode": false
  }
}